<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/java_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java点击调用C将图片置灰" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image" />
    <Button
        android:id="@+id/jni_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jni点击调用C将图片置灰" />
    <ImageView
        android:id="@+id/jni_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image" />


    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击java调用JNI" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击java调用JNI有参数" />

    <Button
        android:id="@+id/bt_javanull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C调用java空方法" />

    <Button
        android:id="@+id/bt_javaInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C调用java Int方法" />

    <Button
        android:id="@+id/bt_javaString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C调用java String方法" />

    <Button
        android:id="@+id/bt_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C调用java 静态方法" />

</LinearLayout>